<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_parent">

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="-5dp"
        android:src="@drawable/circletransparant" />

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-80dp"
        android:layout_marginBottom="-30dp"
        android:src="@drawable/circle" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="50dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/machine_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_action_machine"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:contentDescription="@string/machine_title"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/machine_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/machine_title"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/Purple"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="75dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="42dp"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/run"
                                android:id="@+id/running_button"
                                android:background="@drawable/button_background_v1"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="20dp"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <!--                        -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/recipe_title_list"
                                android:layout_marginStart="10dp"
                                android:text="@string/recipe_title_list"
                                android:textColor="@color/design_default_color_primary_dark"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/recipe_spinner"
                                android:spinnerMode="dropdown"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/selected_background"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/machine_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/machine_info"
                            android:textColor="@color/design_default_color_primary_dark"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginStart="10dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/begin_time_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:text="@string/begin_time_title"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/begin_time_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:enabled="false"
                                android:text="12:30:25"
                                android:textColor="@color/Blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/completed_time_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:layout_centerVertical="true"
                                android:text="@string/completed_time_title"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/completed_time_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:enabled="false"
                                android:text="13:30:25"
                                android:textColor="@color/Blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/temperature_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:text="@string/temperature_title"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/temperature_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/celsius"
                                android:enabled="false"
                                android:text="65"
                                android:textColor="@color/Blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <katex.hourglass.in.mathlib.MathView
                                android:id="@+id/celsius"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="4dp"
                                app:setText="$\\degree C$"
                                app:setTextColor="@color/Blue" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/humidity_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:text="@string/humidity_title"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/humidity_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/humidity"
                                android:layout_centerVertical="true"
                                android:text="65"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/Blue"
                                android:enabled="false"/>

                            <katex.hourglass.in.mathlib.MathView
                                android:id="@+id/humidity"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                app:setText="$\\%$"
                                app:setTextColor="@color/Blue"
                                android:layout_marginEnd="8dp"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/food_type_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:layout_centerVertical="true"
                                android:text="@string/food_type_title"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/food_type_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:layout_centerVertical="true"
                                android:text="Mít tươi"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/Blue"
                                android:enabled="false"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/weigh_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:text="@string/weigh_title"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/weigh_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/weigh"
                                android:layout_centerVertical="true"
                                android:text="100"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/Blue"
                                android:enabled="false"/>

                            <katex.hourglass.in.mathlib.MathView
                                android:id="@+id/weigh"
                                android:layout_width="32dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                app:setText="$Kg$"
                                app:setTextColor="@color/Blue"
                                android:layout_marginEnd="10dp"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/current_temperature_humidity_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/current_temperature_humidity_title"
                            android:textColor="@color/design_default_color_primary_dark"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginStart="10dp"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/chart_image_button"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="10dp"
                                android:src="@mipmap/ic_action_statistics" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/current_temperature_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:text="@string/temperature_title"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/current_temperature_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/current_celsius"
                                android:layout_centerVertical="true"
                                android:text="65"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/Blue"
                                android:enabled="false"/>

                            <katex.hourglass.in.mathlib.MathView
                                android:id="@+id/current_celsius"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="4dp"
                                app:setText="$\\degree C$"
                                app:setTextColor="@color/Blue" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/current_humidity_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:text="@string/humidity_title"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/current_humidity_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/current_humidity"
                                android:layout_centerVertical="true"
                                android:text="65"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/Blue"
                                android:enabled="false"/>

                            <katex.hourglass.in.mathlib.MathView
                                android:id="@+id/current_humidity"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                app:setText="$\\%$"
                                app:setTextColor="@color/Blue"
                                android:layout_marginEnd="8dp"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/status_fan_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_fan_title"
                            android:textColor="@color/design_default_color_primary_dark"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginStart="10dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/blower_fan_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:layout_centerVertical="true"
                                android:text="@string/blower_fan_title"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/closed_blower_fan_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_toStartOf="@+id/blower_fan_switch"
                                android:layout_marginEnd="3dp"
                                android:text="@string/off"
                                android:gravity="center"
                                android:textColor="@color/Blue"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <Switch
                                android:id="@+id/blower_fan_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/opened_blower_fan_text_view"
                                android:layout_marginEnd="3dp"
                                android:layout_centerVertical="true"
                                android:checked="false" />

                            <TextView
                                android:id="@+id/opened_blower_fan_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:text="@string/on"
                                android:gravity="center"
                                android:textColor="@color/Blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/exhaust_fan_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:layout_centerVertical="true"
                                android:text="@string/exhaust_fan_title"
                                android:textColor="@color/Purple"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/closed_exhaust_fan_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_toStartOf="@+id/exhaust_fan_switch"
                                android:layout_marginEnd="3dp"
                                android:text="@string/off"
                                android:gravity="center"
                                android:textColor="@color/Blue"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="RelativeOverlap" />

                            <Switch
                                android:id="@+id/exhaust_fan_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/opened_exhaust_fan_text_view"
                                android:layout_marginEnd="3dp"
                                android:layout_centerVertical="true"
                                android:checked="false" />

                            <TextView
                                android:id="@+id/opened_exhaust_fan_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:text="@string/on"
                                android:gravity="center"
                                android:textColor="@color/Blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>